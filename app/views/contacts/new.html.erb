<div class="container">
  <div class="well">
    
  <%= form_for "/contacts" do |f| %>
    
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
          
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>
    </div>
          
    <div class="form-group">
      <%= f.label :comments %>
      <%= f.text_area :comments, class: 'form-control' %>
    </div>
    
    <%= f.submit 'Submit', class: 'btn btn-default' %>
      
  <% end %>
  
